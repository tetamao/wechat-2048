.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  /* 使用 justify-content 让内容分布 */
  justify-content: center; 
  padding: 40rpx;
  background-color: #faf8ef;
  width: 100vw;   /* 占满屏幕宽度 */
  height: 100vh;
  box-sizing: border-box;
  overflow: hidden; /* 彻底禁止页面滚动 */
}

.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 650rpx;
  /* 增加 margin-bottom 让棋盘向下推 */
  margin-bottom: 60rpx; 
  margin-top: -100rpx; /* 向上提一点标题，给棋盘腾空间 */
}

.title {
  font-size: 90rpx;
  font-weight: 800;
  color: #776e65;
  letter-spacing: -2rpx; /* 紧凑一点更有现代感 */
}

.tile-2048 {
  background: linear-gradient(to bottom right, #edc22e, #ffcc00);
  color: #fff;
  box-shadow: 0 0 15rpx 5rpx rgba(243, 215, 116, 0.45); /* 金色光晕 */
  font-size: 45rpx; /* 数字多了，字号稍微缩小点 */
}

/* 加个简单的缩放动画 */
@keyframes win-scale {
  0% { transform: scale(1); }
  50% { transform: scale(1.1); }
  100% { transform: scale(1); }
}

.tile-2048 {
  animation: win-scale 0.5s ease-in-out;
}

.score-container {
  background: #bbada0;
  padding: 10rpx 25rpx;
  border-radius: 12rpx;
  text-align: center;
  min-width: 120rpx;
  box-shadow: 0 4rpx 10rpx rgba(0,0,0,0.05); /* 加入微弱阴影增加立体感 */
}

/* 可以给最高分框换个更亮的颜色点缀 */
.best-container {
  background: #8f7a66; 
}

.scores-wrapper {
  display: flex;
  gap: 15rpx; /* 两个分数框之间的间距 */
}

.score-label {
  font-size: 24rpx;
  color: #eee4da;
  font-weight: bold;
}

.score-value {
  font-size: 40rpx;
  font-weight: bold;
  color: #fff;
}

/* 棋盘主体 */
.game-container {
  width: 650rpx;
  height: 650rpx;
  background: #bbada0;
  border-radius: 20rpx;
  padding: 12rpx;
  box-sizing: border-box;
  /* 这里的阴影会让棋盘有立体感 */
  box-shadow: 0 12rpx 40rpx rgba(0,0,0,0.12); 
}

.grid-container {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
}

.grid-row {
  display: flex;
  flex: 1; /* 平分高度 */
}

.grid-cell {
  flex: 1; /* 平分宽度 */
  padding: 10rpx;
  box-sizing: border-box;
}

.tile {
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  /* 关键：增加动画过渡 */
  transition: all 120ms ease-in-out; 
  animation: appear 200ms ease-in-out; /* 增加新数字出现时的动画 */
  background: rgba(238, 228, 218, 0.35); /* 默认空格子颜色 */
}



.tile-inner {
  font-size: 55rpx;
  font-weight: bold;
  line-height: 1; /* 修正文字基线对齐 */
}

/* 数字背景色补全 */
.tile-2 { background: #eee4da; color: #776e65; }
.tile-4 { background: #ede0c8; color: #776e65; }
.tile-8 { background: #f2b179; color: #f9f6f2; }
.tile-16 { background: #f59563; color: #f9f6f2; }
.tile-32 { background: #f67c5f; color: #f9f6f2; }
.tile-64 { background: #f65e3b; color: #f9f6f2; }
.tile-128 { background: #edcf72; color: #f9f6f2; font-size: 45rpx; }
.tile-256 { background: #edcc61; color: #f9f6f2; font-size: 45rpx; }
.tile-512 { background: #edc850; color: #f9f6f2; font-size: 45rpx; }
.tile-1024 { background: #edc53f; color: #f9f6f2; font-size: 35rpx; }
.tile-2048 { background: #edc22e; color: #f9f6f2; font-size: 35rpx; }

/* 1. 定义动画：这部分告诉浏览器动画是怎么动的 */
@keyframes appear {
  0% { opacity: 0; transform: scale(0); }
  100% { opacity: 1; transform: scale(1); }
}

/* 2. 使用动画：将动画绑定到数字格子上 */
.tile {
  width: 100%;
  height: 100%;
  border-radius: 6rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  
  /* 基础平滑过渡：处理颜色变化和位置移动（虽然位置是瞬间刷新的，但这里加了会更自然） */
  transition: all 100ms ease-in-out; 
  
  /* 核心：每当一个新数字产生（也就是这个 view 渲染出来时），执行 appear 动画 */
  /* 200ms 是持续时间，ease-in-out 是平滑曲线 */
  animation: appear 200ms ease-in-out; 
}

/* 结算层背景 */
.game-message {
  position: absolute;
  top: 0; left: 0; right: 0; bottom: 0;
  background: rgba(238, 228, 218, 0.85); /* 经典米色透明 */
  backdrop-filter: blur(4px); /* 高斯模糊，非常高级 */
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 100;
  border-radius: 20rpx;
  animation: fadeIn 0.4s ease;
}

.status-title {
  font-size: 80rpx;
  font-weight: bold;
  color: #776e65;
  display: block;
  margin-bottom: 30rpx;
}

.score-detail {
  display: flex;
  justify-content: space-around;
  width: 100%;
  margin-bottom: 40rpx;
}

.score-item .label {
  font-size: 24rpx;
  color: #776e65;
  display: block;
}

.score-item .value {
  font-size: 48rpx;
  font-weight: bold;
  color: #cf2c00;
}

.motivation-text {
  font-size: 32rpx;
  color: #776e65;
  font-style: italic;
  display: block;
  margin-bottom: 50rpx;
}

.restart-btn {
  background: #8f7a66;
  color: #fff;
  border-radius: 10rpx;
  padding: 10rpx 40rpx;
}

@keyframes fadeIn {
  from { opacity: 0; transform: scale(0.9); }
  to { opacity: 1; transform: scale(1); }
}