/* --- 基础布局 --- */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center; 
  padding: 40rpx;
  background-color: #faf8ef;
  width: 100vw;
  height: 100vh;
  box-sizing: border-box;
  overflow: hidden;
}

.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 650rpx;
  margin-bottom: 60rpx; 
  margin-top: -100rpx;
}

.title {
  font-size: 90rpx;
  font-weight: 800;
  color: #776e65;
  letter-spacing: -2rpx;
}

/* --- 分数展示 --- */
.scores-wrapper {
  display: flex;
  gap: 15rpx;
}

.score-container {
  background: #bbada0;
  padding: 10rpx 25rpx;
  border-radius: 12rpx;
  text-align: center;
  min-width: 120rpx;
  box-shadow: 0 4rpx 10rpx rgba(0,0,0,0.05);
}

.best-container {
  background: #8f7a66; 
}

.score-label {
  font-size: 24rpx;
  color: #eee4da;
  font-weight: bold;
}

.score-value {
  font-size: 40rpx;
  font-weight: bold;
  color: #fff;
}

/* --- 棋盘主体 (关键修改：增加 relative) --- */
.game-container {
  position: relative; /* 必须加这个，子元素 game-message 才能准确覆盖 */
  width: 650rpx;
  height: 650rpx;
  background: #bbada0;
  border-radius: 20rpx;
  padding: 12rpx;
  box-sizing: border-box;
  box-shadow: 0 12rpx 40rpx rgba(0,0,0,0.12); 
}

.grid-container {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
}

.grid-row {
  display: flex;
  flex: 1;
}

.grid-cell {
  flex: 1;
  padding: 10rpx;
  box-sizing: border-box;
}

/* --- 数字方块 --- */
.tile {
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  transition: all 120ms ease-in-out; 
  animation: appear 200ms ease-in-out; 
  background: rgba(238, 228, 218, 0.35);
}

.tile-inner {
  font-size: 55rpx;
  font-weight: bold;
  line-height: 1;
}

/* --- 数字颜色库 --- */
.tile-2 { background: #eee4da; color: #776e65; }
.tile-4 { background: #ede0c8; color: #776e65; }
.tile-8 { background: #f2b179; color: #f9f6f2; }
.tile-16 { background: #f59563; color: #f9f6f2; }
.tile-32 { background: #f67c5f; color: #f9f6f2; }
.tile-64 { background: #f65e3b; color: #f9f6f2; }
.tile-128 { background: #edcf72; color: #f9f6f2; font-size: 45rpx; }
.tile-256 { background: #edcc61; color: #f9f6f2; font-size: 45rpx; }
.tile-512 { background: #edc850; color: #f9f6f2; font-size: 45rpx; }
.tile-1024 { background: #edc53f; color: #f9f6f2; font-size: 35rpx;
  /* 增加一个呼吸灯动画 */
  animation: breathe 2s infinite ease-in-out; }
.tile-2048 { 
  background: linear-gradient(to bottom right, #edc22e, #ffcc00);
  color: #fff;
  box-shadow: 0 0 15rpx 5rpx rgba(243, 215, 116, 0.45);
  font-size: 35rpx;
  animation: win-scale 0.5s ease-in-out;
}

/* --- 结算层样式 --- */
.game-message {
  position: absolute;
  top: 0; left: 0; right: 0; bottom: 0;
  background: rgba(238, 228, 218, 0.85); 
  backdrop-filter: blur(4px); 
  display: flex;
  flex-direction: column; /* 纵向排列 */
  justify-content: center;
  align-items: center;
  z-index: 100;
  border-radius: 20rpx;
  animation: fadeIn 0.4s ease;
  text-align: center; /* 确保文字居中 */
}

.message-content {
  width: 90%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.status-title {
  font-size: 70rpx;
  font-weight: bold;
  color: #776e65;
  margin-bottom: 20rpx;
}

.score-detail {
  display: flex;
  justify-content: space-around;
  width: 100%;
  margin-bottom: 30rpx;
}

.motivation-text {
  font-size: 30rpx;
  color: #776e65;
  font-style: italic;
  margin-bottom: 40rpx;
  padding: 0 20rpx;
}

.restart-btn {
  background: #8f7a66;
  color: #fff;
  border-radius: 10rpx;
  padding: 20rpx 60rpx;
  font-size: 34rpx;
  line-height: 1.2;
}

.btn-hover {
  opacity: 0.8;
  transform: scale(0.95);
}

/* 撒花容器覆盖全屏 */
.confetti-container {
  position: absolute;
  top: 0; left: 0; width: 100%; height: 100%;
  overflow: hidden;
  pointer-events: none; /* 不阻挡点击 */
}

/* 纸屑样式 */
.confetti {
  position: absolute;
  top: -20rpx;
  width: 15rpx;
  height: 25rpx;
  opacity: 0.8;
  border-radius: 4rpx;
  animation: fall 3s linear infinite;
}

/* 掉落并旋转动画 */
@keyframes fall {
  0% { transform: translateY(0) rotate(0deg); opacity: 1; }
  100% { transform: translateY(650rpx) rotate(720deg); opacity: 0; }
}

/* 按钮组微调 */
.btn-group {
  display: flex;
  flex-direction: column;
  width: 100%;
  padding: 0 40rpx;
}

.continue-btn {
  background: linear-gradient(135deg, #edc22e, #ffcc00) !important;
  box-shadow: 0 4rpx 15rpx rgba(237, 194, 46, 0.4);
}

/* --- 动画定义 --- */
@keyframes appear {
  0% { opacity: 0; transform: scale(0); }
  100% { opacity: 1; transform: scale(1); }
}

@keyframes fadeIn {
  from { opacity: 0; transform: scale(0.9); }
  to { opacity: 1; transform: scale(1); }
}

@keyframes win-scale {
  0% { transform: scale(1); }
  50% { transform: scale(1.1); }
  100% { transform: scale(1); }
}

@keyframes breathe {
  0% { box-shadow: 0 0 5rpx #edc53f; }
  50% { box-shadow: 0 0 20rpx #ffcc00; }
  100% { box-shadow: 0 0 5rpx #edc53f; }
}